rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta Blog
    match /Blog/{imageId} {
      // Permitir lectura pública de todas las imágenes
      allow read: if true;
      
      // IMPORTANTE: Cambiar estas reglas según tu sistema de autenticación
      // Opción 1: Permitir escritura solo para admins autenticados (recomendado)
      // allow write: if request.auth != null && 
      //                 request.auth.token.role == 'admin';
      
      // Opción 2: Permitir escritura sin autenticación (solo para desarrollo)
      // ⚠️ CAMBIAR ESTO EN PRODUCCIÓN - permite que cualquiera escriba
      allow write: if true;
      
      // Opción 3: Permitir escritura solo si estás autenticado (sin verificar rol)
      // allow write: if request.auth != null;
    }
    
    // Reglas para otras carpetas (ajustar según necesites)
    // Por ejemplo, si tienes una carpeta para rutas:
    // match /routes/{imageId} {
    //   allow read: if true;
    //   allow write: if true; // Solo para desarrollo
    // }
    
    // Denegar acceso a todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

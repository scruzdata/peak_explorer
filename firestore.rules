rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de rutas
    match /routes/{routeId} {
      // Permitir lectura pública (cualquiera puede leer las rutas)
      allow read: if true;
      
      // IMPORTANTE: Cambiar estas reglas según tu sistema de autenticación
      // Opción 1: Permitir escritura solo para admins autenticados (recomendado)
      // allow write: if request.auth != null && 
      //                 request.auth.token.role == 'admin';
      
      // Opción 2: Permitir escritura sin autenticación (solo para desarrollo)
      // ⚠️ CAMBIAR ESTO EN PRODUCCIÓN - permite que cualquiera escriba
      allow write: if true;
      
      // Opción 3: Permitir escritura solo si estás autenticado (sin verificar rol)
      // allow write: if request.auth != null;
    }
    
    // Reglas para la colección de blogs
    match /blogs/{blogId} {
      // Permitir lectura pública de blogs publicados
      // Los borradores solo deberían ser visibles para admins, pero por ahora permitimos todo
      allow read: if true;
      
      // IMPORTANTE: Cambiar estas reglas según tu sistema de autenticación
      // Opción 1: Permitir escritura solo para admins autenticados (recomendado)
      // allow write: if request.auth != null && 
      //                 request.auth.token.role == 'admin';
      
      // Opción 2: Permitir escritura sin autenticación (solo para desarrollo)
      // ⚠️ CAMBIAR ESTO EN PRODUCCIÓN - permite que cualquiera escriba
      allow write: if true;
      
      // Opción 3: Permitir escritura solo si estás autenticado (sin verificar rol)
      // allow write: if request.auth != null;
    }
    
    // Reglas para otras colecciones (ajustar según necesites)
    match /{document=**} {
      allow read, write: if false; // Denegar por defecto
    }
  }
}

